<div class="modal fade" id="<%= delete_todo_modal_id %>" tabindex="-1" aria-labelledby="<%= delete_todo_modal_id %>Label" aria-hidden="true">    
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="<%= delete_todo_modal_id %>Label">
        </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: todo, local: true, url: todo_path(todo), method: :delete do |form| %>
          <p>Are you sure you want to delete this todo?</p>   
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Delete</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
